<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/top_bot_gradient"
    android:descendantFocusability="afterDescendants"
    android:focusable="false"
    android:focusableInTouchMode="false"
    android:focusedByDefault="false"
    android:screenReaderFocusable="false">

    <net.lonelytransistor.launcher.WidgetBar
        android:id="@+id/widget_bar"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:columnCount="10"
        android:orientation="horizontal"
        android:rowCount="5"
        app:layout_constraintBottom_toTopOf="@+id/launcher_bar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <net.lonelytransistor.launcher.LauncherBar
        android:id="@+id/launcher_bar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:descendantFocusability="afterDescendants"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:focusedByDefault="false"
        android:screenReaderFocusable="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
